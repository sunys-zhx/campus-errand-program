<!--定位校区-->
<van-cell class="fu" icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E6%94%B6%E8%B4%A7%E5%9C%B0%E5%9D%80.png?sign=304c3798a16baa25b20ac3977daa3ee7&t=1696857430"  bind:click="popup_campus" value="{{choose_campus}}" is-link value-class="ziti"/>
        <van-popup show="{{ campus_show }}" z-index="100" round position="bottom" duration>
            <van-picker columns="{{ campus }}" show-toolbar title="请选择校区" bind:confirm="campus_confirm" bind:cancel="campus_cancel" bind:change="campus_change" />
        </van-popup>
<!--轮播图-->
<swiper autoplay="{{autoplay}}" circular="{{circular}}" class="banner">
     <block wx:for="{{banner}}" wx:key="index">
          <swiper-item>
               <image style="width:100%;height:100%;" src="{{item.img}}"></image>
          </swiper-item>
     </block>
</swiper>



<!--通知-->
<van-notice-bar
left-icon="volume"
  background="white"
  color="#1c2438"
  text="{{tongzhi}}"
  custom-class="tongzhi"
  speed="40"
/>



