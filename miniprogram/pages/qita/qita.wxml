<view class="wenjian">
    
 
         
  <block wx:for="{{ xian_linshi}}" wx:key="index">
    <view class="wenjian2">
       <view>{{item.name}}</view>
       <view bindtap="delete" data-id="{{index}}">x</view>
    </view> 
   </block>
   <image wx:if="{{fileList.length<9}}" bindtap="uploadToCloud" style="width: 200rpx;height: 200rpx;" src="/images/jiahao.png"></image>

