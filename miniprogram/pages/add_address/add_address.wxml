<!--pages/add_dizhi/add_dizhi.wxml-->
<van-cell title-class="ziti" icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E5%AD%A6%E6%A0%A1%20(2).png?sign=d54de7ea8d612e3776dd1ae7651e7d89&t=1696951237" title="所属校区" bind:click="popup_campus" value="{{choose_campus}}" is-link value-class="ziti"/>
        <van-popup show="{{ campus_show }}" z-index="100" round position="bottom" duration>
            <van-picker columns="{{ campus }}" show-toolbar title="请选择校区" bind:confirm="campus_confirm" bind:cancel="campus_cancel"  bind:change="campus_change"/>
        </van-popup>

       <van-field
            value="{{ shoujian_name }}"
            placeholder="例如：王小五"
            label="收货人"
            left-icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E5%A5%BD%E5%8F%8B.png?sign=ef0b30bcb5897a61a672256e18c886a0&t=1696945897"
            clearable
            label-class="ziti"
            placeholder-style="font-size:32rpx;"
            bind:change="onChange_shoujian"
        />
        <van-field
            value="{{ phone }}"
            placeholder="请输入手机号码"
            label="手机号码"
            left-icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E6%89%8B%E6%9C%BA%E5%8F%B7%E7%A0%81.png?sign=2dbbb993ff0b9c8fa95d528f85e4bd7f&t=1696945577"
            clearable
            label-class="ziti"
            placeholder-style="font-size:32rpx;"
            bind:change="onChange_shoujianphone"
        />

   
        <van-cell title-class="ziti" icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E6%94%B6%E8%B4%A7%E5%9C%B0%E5%9D%80.png?sign=be7fd25bb41f9704c3f012ce57873616&t=1696867425" title="收货地址" bind:click="choose_endlocation" value="{{dizhi}}" is-link value-class="ziti"/>
        <van-field
            value="{{ dizhi }}"
            placeholder="搜索不到地点，手动输入"
            label="手动输入收货地点"
            left-icon="https://636c-cloud1-9gev89rhfb0a2aeb-1320997375.tcb.qcloud.la/%E7%82%B9%E5%87%BB-5.png?sign=13d83996297501fe4b5671ce89e9b517&t=1697814480"
            clearable
            label-class="ziti"
            input-class="ziti"
            placeholder-style="font-size:32rpx;"
            bind:change="onChange_inputlocation"
        />
        <view class="jia">
            <van-button round size="small" color="#7232dd" bind:click="check">添加地址</van-button>
        </view>